<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.gyagoo.test.lec06.dao.BookingDAO">
 	<select id="selectBooking" resultType="com.gyagoo.test.lec06.model.Booking">
 		SELECT
 			`id`
 			,	`name`
 			,	`headcount`
 			,	`day`
 			,	`date`
 			,	`phoneNumber`
 			,	`state`
 			,	`createdAt`
 			,	`updatedAt`
 		FROM
 			`booking`
 	</select>
 
 	<delete id="deleteBooking" parameterType="int">
 		DELETE FROM `booking`
 		WHERE
 			`id` = #{id}
 	</delete>
 	
 	<insert id="insertBooking" parameterType="map">
 		INSERT INTO `booking`
 		(
  			`name`
 			,	`headcount`
 			,	`day`
 			,	`date`
 			,	`phoneNumber`
 			,	`state`
 			,	`createdAt`
 			,	`updatedAt`			
 		)
 		VALUES
 		(
			#{name}
 			,	#{headcount}
 			,	#{day}
 			,	#{date}
 			,	#{phoneNumber}
 			,	#{state}
 			,	now()
 			,	now()
 		)
 	</insert>
 
 	<select id="selectBooking_NamePhone" resultType="String" parameterType="String" >
 		SELECT
 			`name`
 			,	`date`
 			,	`day`
 			,	`headcount`
 			,	`state`
 			,	`createdAt`
 			,	`updatedAt`
 		FROM
 			`booking`
 		WHERE
 			`name` = #{name}
 			`phoneNumber` = #{phoneNumber}
 	</select>
 </mapper>